---
import { siteConfig } from '@data/config/site';

const { edition } = siteConfig;
const currentYear = new Date().getFullYear();

const footerLinks = {
  conference: [
    { label: 'Accueil', href: '/' },
    { label: 'Programme', href: '/schedule' },
    { label: 'Speakers', href: '/speakers' },
    { label: 'Sponsors', href: '/sponsors' },
    { label: 'Photos', href: '/photos' },
  ],
  infos: [
    { label: 'Equipe', href: '/team' },
    { label: 'Code de conduite', href: '/coc' },
    { label: 'Acces', href: '/#venue' },
    { label: 'Contact', href: 'mailto:contact@touraine.tech' },
  ],
  editions: [
    { label: '2025', href: 'https://2025.touraine.tech' },
    { label: '2024', href: 'https://2024.touraine.tech' },
    { label: '2023', href: 'https://2023.touraine.tech' },
    { label: '2022', href: 'https://2022.touraine.tech' },
    { label: '2020', href: 'https://2020.touraine.tech' },
    { label: '2019', href: 'https://2019.touraine.tech' },
    { label: '2018', href: 'https://2018.touraine.tech' },
  ],
};

const socials = [
  { label: 'Twitter', href: 'https://twitter.com/toabortech', icon: 'twitter' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/company/touraitech/', icon: 'linkedin' },
  { label: 'YouTube', href: 'https://www.youtube.com/channel/UCIVyPSe4XdtAg5rdrUP-NKQ', icon: 'youtube' },
  { label: 'Flickr', href: 'https://www.flickr.com/photos/143866243@N05/albums', icon: 'flickr' },
];
---

<footer class="footer">
  <div class="footer-inner">
    <div class="footer-main">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <div class="footer-logo-icon">TT</div>
          <div class="footer-logo-text">
            Touraine<span>Tech</span>
          </div>
        </a>
        <p class="footer-tagline">
          La conference tech en Touraine
        </p>
        <p class="footer-date">
          {edition.dates} - {edition.location}
        </p>

        <div class="footer-socials">
          {socials.map((social) => (
            <a href={social.href} target="_blank" rel="noopener" class="footer-social" aria-label={social.label}>
              {social.icon === 'twitter' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'youtube' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
              {social.icon === 'flickr' && (
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M0 12c0 3.074 2.494 5.564 5.565 5.564 3.075 0 5.569-2.49 5.569-5.564S8.641 6.436 5.565 6.436C2.495 6.436 0 8.926 0 12zm12.866 0c0 3.074 2.493 5.564 5.567 5.564C21.496 17.564 24 15.074 24 12s-2.492-5.564-5.564-5.564c-3.075 0-5.57 2.49-5.57 5.564z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <div class="footer-links">
        <div class="footer-col">
          <h4 class="footer-col-title">Conference</h4>
          <ul class="footer-col-list">
            {footerLinks.conference.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer-col">
          <h4 class="footer-col-title">Informations</h4>
          <ul class="footer-col-list">
            {footerLinks.infos.map((link) => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer-col">
          <h4 class="footer-col-title">Editions</h4>
          <ul class="footer-col-list">
            {footerLinks.editions.map((link) => (
              <li><a href={link.href} target="_blank" rel="noopener">{link.label}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} Touraine Tech. Tous droits reserves.</p>
      <p class="footer-made">Fait avec <span class="heart">❤️</span> en Touraine</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    padding: 4rem 2rem 2rem;
    border-top: 1px solid var(--glass-border);
  }

  .footer-inner {
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--glass-border);
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .footer-logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 1rem;
    color: white;
    font-family: var(--font-display);
  }

  .footer-logo-text {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.15rem;
    letter-spacing: -0.02em;
  }

  .footer-logo-text span {
    color: var(--accent);
  }

  .footer-tagline {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
  }

  .footer-date {
    color: var(--accent-dark);
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }

  .footer-socials {
    display: flex;
    gap: 0.75rem;
  }

  .footer-social {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-primary);
    border-radius: 10px;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .footer-social:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-2px);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-col-title {
    font-family: var(--font-display);
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
  }

  .footer-col-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-col-list a {
    color: var(--text-secondary);
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }

  .footer-col-list a:hover {
    color: var(--accent-dark);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .footer-made .heart {
    display: inline-block;
    animation: pulse 1.5s ease infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }

  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-brand {
      max-width: none;
      text-align: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .footer-socials {
      justify-content: center;
    }

    .footer-links {
      grid-template-columns: repeat(3, 1fr);
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>
