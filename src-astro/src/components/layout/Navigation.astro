---
import { siteConfig } from '@data/config/site';

const { isCfpOpen, isTicketingOpen, isProgrammePublished, isSponsoringOpen, ticketingUrl, cfpUrl } = siteConfig;

// Navigation links - conditionally shown based on site mode
const navLinks = [
  { href: '/', label: 'Accueil', always: true },
  { href: '/schedule', label: 'Programme', show: isProgrammePublished },
  { href: '/speakers', label: 'Speakers', show: isProgrammePublished },
  { href: '/team', label: 'Equipe', always: true },
  { href: '/coc', label: 'Code de conduite', always: true },
].filter(link => link.always || link.show);

const currentPath = Astro.url.pathname;
---

<nav class="nav" role="navigation" aria-label="Navigation principale">
  <div class="nav-inner">
    <a href="/" class="nav-logo">
      <img src="/img/logo.svg" alt="Touraine Tech" class="nav-logo-img" />
    </a>

    <!-- Desktop Navigation -->
    <div class="nav-links">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={['nav-link', { active: currentPath === link.href }]}
          aria-current={currentPath === link.href ? 'page' : undefined}
        >
          {link.label}
        </a>
      ))}

      {isCfpOpen && (
        <a
          href={cfpUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="nav-cta nav-cta-cfp"
          aria-label="Proposer un talk (ouvre dans une nouvelle fenetre)"
        >
          Proposer un talk
        </a>
      )}

      {isTicketingOpen && (
        <a
          href={ticketingUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="nav-cta"
          aria-label="Billetterie (ouvre dans une nouvelle fenetre)"
        >
          Billetterie
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      )}
    </div>

    <!-- Mobile menu button -->
    <button
      class="nav-mobile-toggle"
      id="nav-toggle"
      aria-label="Ouvrir le menu"
      aria-expanded="false"
      aria-controls="nav-mobile-menu"
    >
      <span class="nav-mobile-icon"></span>
    </button>
  </div>

  <!-- Mobile Navigation Panel -->
  <div class="nav-mobile-menu" id="nav-mobile-menu" aria-hidden="true">
    <div class="nav-mobile-links">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={['nav-mobile-link', { active: currentPath === link.href }]}
          aria-current={currentPath === link.href ? 'page' : undefined}
        >
          {link.label}
        </a>
      ))}
    </div>

    <div class="nav-mobile-ctas">
      {isCfpOpen && (
        <a
          href={cfpUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="nav-mobile-cta nav-mobile-cta-cfp"
        >
          Proposer un talk
        </a>
      )}

      {isTicketingOpen && (
        <a
          href={ticketingUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="nav-mobile-cta"
        >
          Billetterie
        </a>
      )}
    </div>
  </div>
</nav>

<script>
  const toggle = document.getElementById('nav-toggle');
  const menu = document.getElementById('nav-mobile-menu');
  const nav = document.querySelector('.nav');

  // Get all focusable elements in the mobile menu
  function getFocusableElements(): HTMLElement[] {
    if (!menu) return [];
    return Array.from(
      menu.querySelectorAll<HTMLElement>(
        'a[href], button:not([disabled]), input:not([disabled]), select:not([disabled]), textarea:not([disabled]), [tabindex]:not([tabindex="-1"])'
      )
    );
  }

  function openMenu() {
    menu?.setAttribute('aria-hidden', 'false');
    toggle?.setAttribute('aria-expanded', 'true');
    toggle?.setAttribute('aria-label', 'Fermer le menu');
    nav?.classList.add('nav-open');
    document.body.style.overflow = 'hidden';

    // Focus first focusable element in menu
    const focusable = getFocusableElements();
    if (focusable.length > 0) {
      focusable[0].focus();
    }
  }

  function closeMenu() {
    menu?.setAttribute('aria-hidden', 'true');
    toggle?.setAttribute('aria-expanded', 'false');
    toggle?.setAttribute('aria-label', 'Ouvrir le menu');
    nav?.classList.remove('nav-open');
    document.body.style.overflow = '';
  }

  toggle?.addEventListener('click', () => {
    const isOpen = toggle.getAttribute('aria-expanded') === 'true';
    if (isOpen) {
      closeMenu();
    } else {
      openMenu();
    }
  });

  // Handle keyboard navigation (Escape + Focus trap)
  document.addEventListener('keydown', (e) => {
    const isOpen = toggle?.getAttribute('aria-expanded') === 'true';
    if (!isOpen) return;

    // Close on Escape
    if (e.key === 'Escape') {
      closeMenu();
      toggle?.focus();
      return;
    }

    // Focus trap on Tab
    if (e.key === 'Tab') {
      const focusable = getFocusableElements();
      // Include toggle button in the trap
      const allFocusable = toggle ? [toggle, ...focusable] : focusable;
      if (allFocusable.length === 0) return;

      const firstElement = allFocusable[0];
      const lastElement = allFocusable[allFocusable.length - 1];

      if (e.shiftKey) {
        // Shift+Tab: if on first element, go to last
        if (document.activeElement === firstElement) {
          e.preventDefault();
          lastElement.focus();
        }
      } else {
        // Tab: if on last element, go to first
        if (document.activeElement === lastElement) {
          e.preventDefault();
          firstElement.focus();
        }
      }
    }
  });

  // Close when clicking a link
  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Close when clicking outside
  document.addEventListener('click', (e) => {
    if (toggle?.getAttribute('aria-expanded') === 'true') {
      const target = e.target as HTMLElement;
      if (!nav?.contains(target)) {
        closeMenu();
      }
    }
  });
</script>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--glass-border);
    padding: 1rem 2rem;
  }

  .nav-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nav-logo-img {
    height: 40px;
    width: auto;
  }

  /* Desktop Navigation */
  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link {
    padding: 0.75rem 1.25rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .nav-link:hover {
    color: var(--text-primary);
    background: var(--glass-bg);
  }

  .nav-link.active {
    color: var(--accent-dark);
    background: var(--accent-light);
  }

  .nav-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
    padding: 0.875rem 1.75rem;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 14px;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-accent);
  }

  .nav-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(74, 154, 138, 0.35);
  }

  .nav-cta-cfp {
    background: var(--bg-primary);
    color: var(--accent-dark);
    border: 2px solid var(--accent);
    box-shadow: none;
  }

  .nav-cta-cfp:hover {
    background: var(--accent-light);
    box-shadow: var(--shadow-md);
  }

  /* Mobile Toggle Button */
  .nav-mobile-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.75rem;
    border-radius: var(--radius-md);
    transition: background 0.2s ease;
  }

  .nav-mobile-toggle:hover {
    background: var(--glass-bg);
  }

  .nav-mobile-icon {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--text-primary);
    position: relative;
    transition: background 0.2s ease;
  }

  .nav-mobile-icon::before,
  .nav-mobile-icon::after {
    content: '';
    position: absolute;
    width: 24px;
    height: 2px;
    background: var(--text-primary);
    left: 0;
    transition: transform 0.3s ease, top 0.3s ease, bottom 0.3s ease;
  }

  .nav-mobile-icon::before { top: -8px; }
  .nav-mobile-icon::after { bottom: -8px; }

  /* Hamburger to X animation */
  .nav-open .nav-mobile-icon {
    background: transparent;
  }

  .nav-open .nav-mobile-icon::before {
    top: 0;
    transform: rotate(45deg);
  }

  .nav-open .nav-mobile-icon::after {
    bottom: 0;
    transform: rotate(-45deg);
  }

  /* Mobile Menu Panel */
  .nav-mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--bg-primary);
    border-bottom: 1px solid var(--glass-border);
    padding: 1rem 2rem 2rem;
    box-shadow: var(--shadow-lg);
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
  }

  .nav-mobile-menu[aria-hidden="false"] {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .nav-mobile-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .nav-mobile-link {
    display: block;
    padding: 1rem 1.25rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .nav-mobile-link:hover {
    color: var(--text-primary);
    background: var(--glass-bg);
  }

  .nav-mobile-link.active {
    color: var(--accent-dark);
    background: var(--accent-light);
  }

  .nav-mobile-ctas {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid var(--glass-border);
  }

  .nav-mobile-cta {
    display: block;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    text-align: center;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .nav-mobile-cta:hover {
    box-shadow: var(--shadow-md);
  }

  .nav-mobile-cta-cfp {
    background: var(--bg-secondary);
    color: var(--accent-dark);
    border: 2px solid var(--accent);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .nav-links {
      display: none;
    }

    .nav-mobile-toggle {
      display: block;
    }

    .nav-mobile-menu {
      display: block;
    }
  }

  @media (max-width: 640px) {
    .nav {
      padding: 0.75rem 1rem;
    }

    .nav-logo-text {
      display: none;
    }

    .nav-mobile-menu {
      padding: 1rem 1rem 1.5rem;
    }

    .nav-mobile-link {
      padding: 0.875rem 1rem;
      font-size: 1rem;
    }

    .nav-mobile-cta {
      padding: 0.875rem 1.25rem;
    }
  }
</style>
