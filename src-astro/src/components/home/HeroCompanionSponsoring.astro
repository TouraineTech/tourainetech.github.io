---
/**
 * Hero Companion — Sponsoring Phase
 * Encourages companies to become sponsors
 * Design: unified companion card pattern (matches ticket card)
 */
import { siteConfig } from '@data/config/site';

const { sponsoringUrl } = siteConfig;
---

<div class="companion-card">
  <div class="companion-header">
    <div>
      <h3 class="companion-title">Devenez partenaire</h3>
      <p class="companion-subtitle">Associez votre marque à Touraine Tech</p>
    </div>
    <div class="companion-badge">
      Appel ouvert
    </div>
  </div>

  <div class="companion-body">
    <p class="companion-desc">
      Visibilité, recrutement, networking&nbsp;: choisissez la formule
      qui vous convient parmi nos offres de sponsoring.
    </p>

    <div class="sponsor-perks">
      <div class="perk">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <span>550+ participants</span>
      </div>
      <div class="perk">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <span>Stand & visibilité</span>
      </div>
      <div class="perk">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
          <polyline points="20 6 9 17 4 12"/>
        </svg>
        <span>Recrutement sur place</span>
      </div>
    </div>

    <a href={sponsoringUrl} target="_blank" rel="noopener noreferrer" class="companion-cta">
      Voir les offres
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M5 12h14M12 5l7 7-7 7"/>
      </svg>
    </a>
  </div>
</div>

<style>
  /* === Companion card shared pattern === */
  .companion-card {
    background: var(--bg-primary);
    border-radius: 24px;
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  .companion-header {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .companion-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 200px;
    height: 200px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
  }

  .companion-title {
    font-size: 1.35rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.2rem;
    position: relative;
    z-index: 1;
  }

  .companion-subtitle {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.85rem;
    position: relative;
    z-index: 1;
  }

  .companion-badge {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 0.4rem 0.9rem;
    border-radius: 100px;
    color: white;
    font-size: 0.75rem;
    font-weight: 500;
    position: relative;
    z-index: 1;
  }

  .companion-body {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .companion-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    width: 100%;
    padding: 1.15rem;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: white;
    border: none;
    border-radius: 14px;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    margin-top: 0.5rem;
    box-shadow: var(--shadow-accent);
  }

  .companion-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(106, 191, 173, 0.35);
  }

  .companion-cta svg {
    transition: transform 0.3s ease;
  }

  .companion-cta:hover svg {
    transform: translateX(3px);
  }

  /* === Sponsoring-specific === */
  .companion-desc {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .sponsor-perks {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .perk {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .perk svg {
    color: var(--accent);
    flex-shrink: 0;
  }

  /* === Animations === */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 640px) {
    .companion-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      padding: 1.25rem 1.5rem;
    }

    .companion-body {
      padding: 1.5rem;
    }
  }
</style>
