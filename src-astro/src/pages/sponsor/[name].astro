---
import Layout from '@layouts/Layout.astro';
import { getAllSponsors, getSponsorById, getSponsorTypeLabel } from '@lib/data';

export async function getStaticPaths() {
  const sponsors = getAllSponsors();
  return sponsors.map((sponsor) => ({
    params: { name: sponsor.id },
  }));
}

const { name } = Astro.params;
const sponsor = getSponsorById(name);

if (!sponsor) {
  return Astro.redirect('/404');
}

const typeLabel = getSponsorTypeLabel(sponsor.type);
const isPartner = sponsor.type === 'partenaires';
---

<Layout
  title={`Merci Ã  ${sponsor.name}`}
  description={sponsor.desc?.slice(0, 160)}
>
  <div class="sponsor-page">
    <div class="sponsor-container">
      <!-- Back link -->
      <a href="/" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Tous les sponsors
      </a>

      <!-- Sponsor Header -->
      <header class="sponsor-header">
        <span class="type-badge" class:list={[sponsor.type]}>
          {isPartner ? 'Partenaire' : `Sponsor ${typeLabel}`}
        </span>
        <h1 class="sponsor-name">{sponsor.name}</h1>
      </header>

      <!-- Logo -->
      <div class="logo-container">
        <img
          src={`/img/sponsors/${sponsor.image}`}
          alt={sponsor.name}
          class="sponsor-logo"
        />
      </div>

      <!-- Description -->
      {sponsor.desc && (
        <section class="description-section">
          <div class="description-content glass-card" set:html={sponsor.desc} />
        </section>
      )}

      <!-- Website CTA -->
      <a href={sponsor.link} target="_blank" rel="noopener noreferrer" class="website-cta">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <line x1="2" y1="12" x2="22" y2="12"/>
          <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
        </svg>
        Visiter leur site internet
      </a>

      <!-- Social Links -->
      {(sponsor.linkedIn || sponsor.twitter || sponsor.bluesky || sponsor.facebook || sponsor.instagram || sponsor.youtube || sponsor.github || sponsor.tiktok || sponsor.twitch) && (
        <div class="social-links">
          {sponsor.linkedIn && (
            <a href={sponsor.linkedIn} target="_blank" rel="noopener noreferrer" class="social-link" title="LinkedIn">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          )}
          {sponsor.twitter && (
            <a href={sponsor.twitter} target="_blank" rel="noopener noreferrer" class="social-link" title="X / Twitter">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          )}
          {sponsor.bluesky && (
            <a href={sponsor.bluesky} target="_blank" rel="noopener noreferrer" class="social-link" title="Bluesky">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 600 530" fill="currentColor">
                <path d="m135.72 44.03c66.496 49.921 138.02 151.14 164.28 205.46 26.262-54.316 97.782-155.54 164.28-205.46 47.98-36.021 125.72-63.892 125.72 24.795 0 17.712-10.155 148.79-16.111 170.07-20.703 73.984-96.144 92.854-163.25 81.433 117.3 19.964 147.14 86.092 82.697 152.22-122.39 125.59-175.91-31.511-189.63-71.766-2.514-7.3797-3.6904-10.832-3.7077-7.8964-0.0174-2.9357-1.1937 0.51669-3.7077 7.8964-13.714 40.255-67.233 197.36-189.63 71.766-64.444-66.128-34.605-132.26 82.697-152.22-67.108 11.421-142.55-7.4491-163.25-81.433-5.9562-21.282-16.111-152.36-16.111-170.07 0-88.687 77.742-60.816 125.72-24.795z"/>
              </svg>
            </a>
          )}
          {sponsor.facebook && (
            <a href={sponsor.facebook} target="_blank" rel="noopener noreferrer" class="social-link" title="Facebook">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
              </svg>
            </a>
          )}
          {sponsor.instagram && (
            <a href={sponsor.instagram} target="_blank" rel="noopener noreferrer" class="social-link" title="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          )}
          {sponsor.youtube && (
            <a href={sponsor.youtube} target="_blank" rel="noopener noreferrer" class="social-link" title="YouTube">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
              </svg>
            </a>
          )}
          {sponsor.github && (
            <a href={sponsor.github} target="_blank" rel="noopener noreferrer" class="social-link" title="GitHub">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
          {sponsor.tiktok && (
            <a href={sponsor.tiktok} target="_blank" rel="noopener noreferrer" class="social-link" title="TikTok">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            </a>
          )}
          {sponsor.twitch && (
            <a href={sponsor.twitch} target="_blank" rel="noopener noreferrer" class="social-link" title="Twitch">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M2.149 0l-1.612 4.119v16.836h5.731v3.045h3.224l3.045-3.045h4.657l6.269-6.269v-14.686h-21.314zm19.164 13.612l-3.582 3.582h-5.731l-3.045 3.045v-3.045h-4.836v-15.045h17.194v11.463zm-3.582-7.343v6.262h-2.149v-6.262h2.149zm-5.731 0v6.262h-2.149v-6.262h2.149z" fill-rule="evenodd" clip-rule="evenodd"/>
              </svg>
            </a>
          )}
        </div>
      )}

      <!-- Job Offers -->
      {sponsor.jobOffers && sponsor.jobOffers.length > 0 && (
        <section class="jobs-section">
          <h2>Offres d'emploi</h2>
          <div class="jobs-list">
            {sponsor.jobOffers.map((job) => (
              <a
                href={job.pdf ? `/sponsors/${sponsor.id}/${job.pdf}` : job.link}
                target="_blank"
                rel="noopener noreferrer"
                class="job-item"
              >
                <span class="job-title" set:html={job.title} />
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</Layout>

<style>
  .sponsor-page {
    min-height: 100vh;
    background: var(--bg-secondary);
    padding: 2rem;
  }

  .sponsor-container {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  /* Back link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  /* Sponsor Header */
  .sponsor-header {
    margin-bottom: 2rem;
  }

  .type-badge {
    display: inline-block;
    padding: 0.35rem 0.9rem;
    border-radius: 100px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .type-badge.platinum {
    background: linear-gradient(135deg, #e5e4e2 0%, #c0c0c0 100%);
    color: #333;
  }

  .type-badge.gold {
    background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
    color: #333;
  }

  .type-badge.silver {
    background: linear-gradient(135deg, #c0c0c0 0%, #a8a8a8 100%);
    color: #333;
  }

  .type-badge.bronze {
    background: linear-gradient(135deg, #cd7f32 0%, #b87333 100%);
    color: white;
  }

  .type-badge.partenaires {
    background: var(--accent-light);
    color: var(--accent-dark);
  }

  .sponsor-name {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  /* Logo */
  .logo-container {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .sponsor-logo {
    max-width: 280px;
    max-height: 200px;
    object-fit: contain;
  }

  /* Description */
  .description-section {
    margin-bottom: 2rem;
  }

  .description-content {
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-align: justify;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .description-content :global(br) {
    display: block;
    content: "";
    margin: 0.5rem 0;
  }

  .description-content :global(ul) {
    margin: 1rem 0;
    padding-left: 1.5rem;
    text-align: left;
  }

  .description-content :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Website CTA */
  .website-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--accent);
    color: white;
    text-decoration: none;
    font-weight: 600;
    border-radius: 100px;
    transition: all 0.2s ease;
    margin-bottom: 2rem;
  }

  .website-cta:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  /* Social Links */
  .social-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  /* Jobs Section */
  .jobs-section {
    text-align: left;
  }

  .jobs-section h2 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .jobs-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .job-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.2s ease;
  }

  .job-item:hover {
    background: var(--bg-secondary);
    border-color: var(--accent-light);
    transform: translateX(4px);
  }

  .job-item svg {
    color: var(--text-muted);
    flex-shrink: 0;
  }

  .job-title {
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .sponsor-page {
      padding: 1rem;
    }

    .sponsor-name {
      font-size: 1.75rem;
    }

    .sponsor-logo {
      max-width: 200px;
    }

    .description-content {
      padding: 1rem;
    }
  }
</style>
