---
import Layout from '@layouts/Layout.astro';
import {
  getSpeakerByUid,
  getAllScheduledSpeakers,
  getTalksBySpeakerUid,
  markdownToHtml,
  getSpeakerAvatarUrl,
} from '@lib/data';

export async function getStaticPaths() {
  const speakers = getAllScheduledSpeakers();
  return speakers.map((speaker) => ({
    params: { uid: speaker.uid },
  }));
}

const { uid } = Astro.params;
const speaker = getSpeakerByUid(uid);

if (!speaker) {
  return Astro.redirect('/404');
}

const speakerName = speaker.name.split('_').join(' ');
const bioHtml = markdownToHtml(speaker.bio);
const avatarUrl = getSpeakerAvatarUrl(speaker);
const talks = getTalksBySpeakerUid(uid);
---

<Layout title={speakerName} description={speaker.bio?.slice(0, 160)}>
  <div class="speaker-page">
    <div class="speaker-container">
      <!-- Back link -->
      <a href="/speakers" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Tous les speakers
      </a>

      <!-- Speaker Header -->
      <header class="speaker-header">
        <div class="avatar-container">
          <img
            src={avatarUrl}
            alt={speakerName}
            class="avatar"
            onerror={`this.onerror=null;this.src='https://ui-avatars.com/api/?name=${encodeURIComponent(speakerName)}&background=6abfad&color=fff&size=200'`}
          />
        </div>

        <h1 class="speaker-name">{speakerName}</h1>

        {speaker.company && (
          <p class="speaker-company">{speaker.company}</p>
        )}

        <!-- Social links -->
        <div class="social-links">
          {speaker.twitter && (
            <a href={`https://twitter.com/${speaker.twitter.replace(/^@/, '')}`} target="_blank" rel="noopener noreferrer" class="social-link" title="Twitter">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          )}
          {speaker.github && (
            <a href={`https://github.com/${speaker.github}`} target="_blank" rel="noopener noreferrer" class="social-link" title="GitHub">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
        </div>
      </header>

      <!-- Bio -->
      {bioHtml && (
        <section class="bio-section">
          <h2>Biographie</h2>
          <div class="bio-content glass-card" set:html={bioHtml} />
        </section>
      )}

      <!-- Talks -->
      {talks.length > 0 && (
        <section class="talks-section">
          <h2>Talk{talks.length > 1 ? 's' : ''} à Touraine Tech 2026</h2>
          <div class="talks-list">
            {talks.map((talk) => (
              <a href={`/talk/${talk.id}`} class="talk-item">
                <div class="talk-item__meta">
                  <span class="talk-format">{talk.formats.includes('Lightning') ? 'Lightning' : talk.formats.includes('Hands-on') ? 'Atelier' : 'Conférence'}</span>
                  {talk.categories && <span class="talk-category">{talk.categories}</span>}
                </div>
                <h3 class="talk-item__title">{talk.title}</h3>
                <div class="talk-item__info">
                  <span>{talk.timeDisplay}</span>
                  <span>·</span>
                  <span>{talk.roomDisplay}</span>
                </div>
              </a>
            ))}
          </div>
        </section>
      )}
    </div>
  </div>
</Layout>

<style>
  .speaker-page {
    min-height: 100vh;
    background: var(--bg-secondary);
    padding: 2rem;
  }

  .speaker-container {
    max-width: 700px;
    margin: 0 auto;
  }

  /* Back link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  /* Speaker Header */
  .speaker-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .avatar-container {
    width: 150px;
    height: 150px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    background: var(--bg-tertiary);
    box-shadow: var(--shadow-lg);
  }

  .avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .speaker-name {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .speaker-company {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  /* Social links */
  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  /* Bio section */
  .bio-section {
    margin-bottom: 2.5rem;
  }

  .bio-section h2,
  .talks-section h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .bio-content {
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .bio-content :global(p) {
    margin-bottom: 1rem;
  }

  .bio-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .bio-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .bio-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
  }

  .bio-content :global(ul),
  .bio-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .bio-content :global(li) {
    margin-bottom: 0.5rem;
  }

  /* Talks section */
  .talks-section {
    margin-bottom: 2rem;
  }

  .talks-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .talk-item {
    display: block;
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .talk-item:hover {
    background: var(--bg-secondary);
    border-color: var(--accent-light);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .talk-item__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .talk-format {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
  }

  .talk-category {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background: var(--accent-light);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--accent-dark);
  }

  .talk-item__title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  .talk-item__info {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .speaker-page {
      padding: 1rem;
    }

    .speaker-name {
      font-size: 1.5rem;
    }

    .avatar-container {
      width: 120px;
      height: 120px;
    }
  }
</style>
