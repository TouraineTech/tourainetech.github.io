---
import Layout from '@layouts/Layout.astro';
import teamData from '@data/team.json';

interface TeamMember {
  name: string;
  avatar: string;
  role: string;
  twitter?: string | null;
  github?: string | null;
  linkedin?: string | null;
  bluesky?: string | null;
}

const team = teamData as TeamMember[];
---

<Layout title="L'équipe" description="L'équipe organisatrice de Touraine Tech 2026">
  <div class="team-page">
    <header class="page-header">
      <div class="header-content">
        <span class="header-label">Touraine Tech 2026</span>
        <h1>L'équipe</h1>
        <p class="header-description">
          {team.length} bénévoles passionnés organisent cet événement.
        </p>
      </div>
    </header>

    <div class="team-container">
      <div class="team-grid">
        {team.map((member, index) => (
          <article class="team-card" style={`--card-delay: ${index * 0.05}s`}>
            <div class="card-accent"></div>
            <div class="card-content">
              <div class="avatar-wrapper">
                <div class="avatar-ring"></div>
                <div class="avatar-container">
                  <img
                    src={`/img/team/${member.avatar}`}
                    alt={member.name}
                    loading="lazy"
                    onerror={`this.onerror=null;this.src='https://ui-avatars.com/api/?name=${encodeURIComponent(member.name)}&background=6abfad&color=fff&size=200'`}
                  />
                </div>
              </div>

              <h3 class="member-name">{member.name}</h3>
              <span class:list={['member-role', { 'member-role--bureau': member.role !== 'Membre' }]}>
                {member.role}
              </span>

              {(member.twitter || member.github || member.linkedin || member.bluesky) && (
                <div class="social-links">
                  {member.twitter && (
                    <a
                      href={`https://twitter.com/${member.twitter.replace(/^@/, '')}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-link"
                      title="Twitter / X"
                      aria-label={`${member.name} sur Twitter`}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                      </svg>
                    </a>
                  )}
                  {member.bluesky && (
                    <a
                      href={`https://bsky.app/profile/${member.bluesky}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-link"
                      title="Bluesky"
                      aria-label={`${member.name} sur Bluesky`}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.039.415-.056-.138.022-.276.04-.415.056-3.912.58-7.387 2.005-2.83 7.078 5.013 5.19 6.87-1.113 7.823-4.308.953 3.195 2.05 9.271 7.733 4.308 4.267-4.308 1.172-6.498-2.74-7.078a8.741 8.741 0 0 1-.415-.056c.14.017.279.036.415.056 2.67.297 5.568-.628 6.383-3.364.246-.828.624-5.79.624-6.478 0-.69-.139-1.861-.902-2.206-.659-.298-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8Z"/>
                      </svg>
                    </a>
                  )}
                  {member.github && (
                    <a
                      href={`https://github.com/${member.github}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-link"
                      title="GitHub"
                      aria-label={`${member.name} sur GitHub`}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    </a>
                  )}
                  {member.linkedin && (
                    <a
                      href={`https://linkedin.com/in/${member.linkedin}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="social-link"
                      title="LinkedIn"
                      aria-label={`${member.name} sur LinkedIn`}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  .team-page {
    min-height: 100vh;
    background: var(--bg-secondary);
  }

  /* Page Header */
  .page-header {
    background:
      linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.92),
        rgba(255, 255, 255, 0.88)
      ),
      url('/img/team.jpg') center 20% / cover;
    border-bottom: 1px solid var(--glass-border);
    padding: 5rem 2rem;
    position: relative;
  }

  .page-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--accent),
      transparent
    );
    opacity: 0.5;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .header-label {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: var(--accent-light);
    color: var(--accent-dark);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    border-radius: 100px;
    margin-bottom: 1.25rem;
  }

  .page-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .header-description {
    color: var(--text-secondary);
    font-size: 1.15rem;
  }

  /* Team Container */
  .team-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Team Grid */
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 2rem;
    justify-items: center;
  }

  /* Team Card */
  .team-card {
    position: relative;
    width: 100%;
    max-width: 220px;
    background: linear-gradient(
      165deg,
      var(--bg-primary) 0%,
      color-mix(in srgb, var(--accent) 3%, var(--bg-primary)) 100%
    );
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition:
      transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.3s ease,
      border-color 0.3s ease;
    animation: cardFadeIn 0.5s ease-out backwards;
    animation-delay: var(--card-delay, 0s);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .team-card:hover {
    transform: translateY(-4px);
    border-color: color-mix(in srgb, var(--accent) 40%, transparent);
    box-shadow: var(--shadow-md);
  }

  /* Accent Bar */
  .card-accent {
    height: 4px;
    background: linear-gradient(
      90deg,
      var(--accent),
      color-mix(in srgb, var(--accent) 70%, #4ecdc4)
    );
    position: relative;
    overflow: hidden;
  }

  .card-accent::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    transition: left 0.5s ease;
  }

  .team-card:hover .card-accent::after {
    left: 100%;
  }

  /* Card Content */
  .card-content {
    padding: 1.75rem 1.5rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  /* Avatar */
  .avatar-wrapper {
    position: relative;
    margin-bottom: 1.25rem;
  }

  .avatar-ring {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 2px solid var(--glass-border);
    transition:
      border-color 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .team-card:hover .avatar-ring {
    border-color: var(--accent);
    transform: scale(1.03);
    box-shadow: 0 0 20px rgba(106, 191, 173, 0.25);
  }

  .avatar-container {
    width: 110px;
    height: 110px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--bg-tertiary);
    position: relative;
    z-index: 1;
  }

  .avatar-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .team-card:hover .avatar-container img {
    transform: scale(1.05);
  }

  /* Member Name */
  .member-name {
    font-family: var(--font-display);
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
    letter-spacing: -0.01em;
  }

  /* Member Role */
  .member-role {
    display: inline-block;
    margin-top: 0.35rem;
    padding: 0.2rem 0.6rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-muted);
    background: var(--bg-secondary);
    border-radius: 100px;
  }

  .member-role--bureau {
    background: var(--accent-light);
    color: var(--accent-dark);
    font-weight: 600;
  }

  /* Social Links */
  .social-links {
    display: flex;
    justify-content: center;
    gap: 0.4rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--glass-border);
    width: 100%;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--bg-secondary);
    color: var(--text-muted);
    border: 1px solid var(--glass-border);
    transition:
      all 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .social-link:hover {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
    transform: translateY(-3px) scale(1.05);
    box-shadow:
      0 6px 16px -4px rgba(106, 191, 173, 0.4),
      0 2px 4px rgba(106, 191, 173, 0.2);
  }

  .social-link:active {
    transform: translateY(-1px) scale(1.02);
  }

  .social-link svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .social-link:hover svg {
    transform: scale(1.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      padding: 3.5rem 1.5rem;
    }

    .team-container {
      padding: 2.5rem 1rem;
    }

    .team-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1.25rem;
    }

    .team-card {
      max-width: 180px;
    }

    .card-content {
      padding: 1.25rem 1rem 1.25rem;
    }

    .avatar-container {
      width: 90px;
      height: 90px;
    }

    .avatar-ring {
      inset: -3px;
    }

    .member-name {
      font-size: 1rem;
    }

    .social-links {
      gap: 0.35rem;
      margin-top: 0.75rem;
      padding-top: 0.75rem;
    }

    .social-link {
      width: 32px;
      height: 32px;
    }

    .social-link svg {
      width: 14px;
      height: 14px;
    }
  }

  @media (max-width: 480px) {
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .team-card {
      max-width: none;
    }
  }
</style>
