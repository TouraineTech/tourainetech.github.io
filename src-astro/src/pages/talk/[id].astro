---
import Layout from '@layouts/Layout.astro';
import SpeakerCard from '@components/ui/SpeakerCard.astro';
import {
  getTalkById,
  getAllScheduledTalks,
  markdownToHtml,
  buildOpenFeedbackUrl,
  getFormatLabel,
  getDurationLabel,
  isWorkshop,
  isLightning,
  isKeynote,
} from '@lib/data';

export async function getStaticPaths() {
  const talks = getAllScheduledTalks();
  return talks.map((talk) => ({
    params: { id: talk.id },
  }));
}

const { id } = Astro.params;
const talk = getTalkById(id);

if (!talk) {
  return Astro.redirect('/404');
}

const abstractHtml = markdownToHtml(talk.abstract);
const feedbackUrl = buildOpenFeedbackUrl(talk.id, talk.day);
const formatLabel = getFormatLabel(talk);
const durationLabel = getDurationLabel(talk);

// Category color mapping
const categoryColors: Record<string, string> = {
  'front': 'var(--cat-front)',
  'backend': 'var(--cat-backend)',
  'architecture': 'var(--cat-archi)',
  'conception': 'var(--cat-archi)',
  'iot': 'var(--cat-iot)',
  'tools': 'var(--cat-tools)',
  'outils': 'var(--cat-tools)',
  'human': 'var(--cat-human)',
  'ai': 'var(--cat-ai)',
  'alien': 'var(--cat-alien)',
};

function getCategoryColor(category: string | null): string {
  if (!category) return 'var(--accent)';
  const lowerCat = category.toLowerCase();
  for (const [key, color] of Object.entries(categoryColors)) {
    if (lowerCat.includes(key)) return color;
  }
  return 'var(--accent)';
}

const catColor = getCategoryColor(talk.categories);
---

<Layout title={talk.title} description={talk.abstract?.slice(0, 160)}>
  <div class="talk-page">
    <div class="talk-container">
      <!-- Back link -->
      <a href="/schedule" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Retour au programme
      </a>

      <!-- Header -->
      <header class="talk-header">
        <div class="talk-meta">
          <span class="format-badge" class:list={[{ 'lightning': isLightning(talk), 'workshop': isWorkshop(talk), 'keynote': isKeynote(talk) }]}>
            {formatLabel}
            {durationLabel && <span class="duration">· {durationLabel}</span>}
          </span>
          {talk.categories && (
            <span class="category-tag" style={`--cat-color: ${catColor}`}>
              {talk.categories}
            </span>
          )}
        </div>

        <h1 class="talk-title">{talk.title}</h1>

        <div class="talk-info">
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <span>{talk.timeDisplay}</span>
          </div>
          <div class="info-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{talk.roomDisplay}</span>
          </div>
          {talk.level && (
            <div class="info-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
              <span>{talk.level === 'BEGINNER' ? 'Débutant' : talk.level === 'INTERMEDIATE' ? 'Intermédiaire' : 'Avancé'}</span>
            </div>
          )}
        </div>
      </header>

      <!-- Speakers -->
      {talk.speakers.length > 0 && (
        <section class="speakers-section">
          <h2>Speaker{talk.speakers.length > 1 ? 's' : ''}</h2>
          <div class="speakers-grid">
            {talk.speakers.map((speaker) => (
              <SpeakerCard speaker={speaker} size="md" showCompany={true} linkToProfile={true} />
            ))}
          </div>
        </section>
      )}

      <!-- Abstract -->
      {abstractHtml && (
        <section class="abstract-section">
          <h2>Description</h2>
          <div class="abstract-content glass-card" set:html={abstractHtml} />
        </section>
      )}

      <!-- Feedback CTA -->
      <a href={feedbackUrl} target="_blank" rel="noopener noreferrer" class="feedback-cta">
        <span class="feedback-cta__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
        </span>
        <span class="feedback-cta__text">Donner votre avis</span>
        <span class="feedback-cta__arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </a>
    </div>
  </div>
</Layout>

<style>
  .talk-page {
    min-height: 100vh;
    background: var(--bg-secondary);
    padding: 2rem;
  }

  .talk-container {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Back link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  /* Header */
  .talk-header {
    margin-bottom: 2rem;
  }

  .talk-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .format-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.75rem;
    background: var(--bg-tertiary);
    border-radius: 100px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .format-badge.lightning {
    background: #fef3c7;
    color: #92400e;
  }

  .format-badge.workshop {
    background: #dbeafe;
    color: #1e40af;
  }

  .format-badge.keynote {
    background: var(--text-primary);
    color: white;
  }

  .format-badge .duration {
    font-weight: 500;
    opacity: 0.8;
  }

  .category-tag {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    background: color-mix(in srgb, var(--cat-color) 15%, white);
    color: var(--cat-color);
    border-radius: 100px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .talk-title {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }

  .talk-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .info-item svg {
    color: var(--accent);
    flex-shrink: 0;
  }

  /* Speakers section */
  .speakers-section {
    margin-bottom: 2rem;
  }

  .speakers-section h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  /* Abstract section */
  .abstract-section {
    margin-bottom: 2rem;
  }

  .abstract-section h2 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .abstract-content {
    background: var(--bg-primary);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .abstract-content :global(p) {
    margin-bottom: 1rem;
  }

  .abstract-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .abstract-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  .abstract-content :global(code) {
    background: var(--bg-tertiary);
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .abstract-content :global(pre) {
    background: var(--bg-tertiary);
    padding: 1rem;
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: 1rem 0;
  }

  .abstract-content :global(ul),
  .abstract-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .abstract-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .abstract-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
  }

  /* Feedback CTA */
  .feedback-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: var(--accent);
    color: white;
    text-decoration: none;
    font-weight: 600;
    border-radius: 100px;
    transition: all 0.2s ease;
    box-shadow: 0 4px 12px rgba(106, 191, 173, 0.3);
  }

  .feedback-cta:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(106, 191, 173, 0.4);
  }

  .feedback-cta__icon,
  .feedback-cta__arrow {
    display: flex;
    align-items: center;
  }

  .feedback-cta__arrow {
    transition: transform 0.2s ease;
  }

  .feedback-cta:hover .feedback-cta__arrow {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .talk-page {
      padding: 1rem;
    }

    .talk-title {
      font-size: 1.5rem;
    }

    .talk-info {
      flex-direction: column;
      gap: 0.75rem;
    }

    .speakers-grid {
      grid-template-columns: 1fr;
    }

    .feedback-cta {
      width: 100%;
      justify-content: center;
    }
  }
</style>
