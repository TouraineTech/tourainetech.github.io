---
import Layout from '@layouts/Layout.astro';
import { getAllSponsors, getSponsorTypeLabel, type Sponsor } from '@lib/data';

const allSponsors = getAllSponsors();

// Group sponsors by tier (Gold > Silver > Bronze)
const sponsorsByType = {
  gold: allSponsors.filter(s => s.type === 'gold'),
  silver: allSponsors.filter(s => s.type === 'silver'),
  bronze: allSponsors.filter(s => s.type === 'bronze'),
  partenaires: allSponsors.filter(s => s.type === 'partenaires'),
};

const tierOrder: Sponsor['type'][] = ['gold', 'silver', 'bronze', 'partenaires'];

const tierConfig = {
  gold: {
    label: 'Gold',
    icon: 'â˜…',
    gradient: 'linear-gradient(135deg, #FFD700 0%, #FFA500 100%)',
    color: '#1a1a2e',
    glow: '0 4px 20px rgba(255, 215, 0, 0.3)',
    borderColor: '#DAA520',
  },
  silver: {
    label: 'Silver',
    icon: 'â˜…',
    gradient: 'linear-gradient(135deg, #E8E8E8 0%, #C0C0C0 100%)',
    color: '#1a1a2e',
    glow: 'none',
    borderColor: '#C0C0C0',
  },
  bronze: {
    label: 'Bronze',
    icon: 'â˜…',
    gradient: 'linear-gradient(135deg, #CD7F32 0%, #A0522D 100%)',
    color: 'white',
    glow: 'none',
    borderColor: '#A0522D',
  },
  partenaires: {
    label: 'Partenaires',
    icon: 'â™¥',
    gradient: 'var(--accent-light)',
    color: 'var(--accent-dark)',
    glow: 'none',
    borderColor: 'var(--accent)',
  },
};
---

<Layout title="Nos sponsors" description="Les sponsors et partenaires de Touraine Tech 2026">
  <div class="sponsors-page">
    <header class="page-header">
      <div class="header-content">
        <span class="header-label">Touraine Tech 2026</span>
        <h1>Nos sponsors</h1>
        <p class="header-description">
          Merci Ã  nos {allSponsors.length} sponsors et partenaires qui rendent cet Ã©vÃ©nement possible.
        </p>
      </div>
    </header>

    <div class="sponsors-container">
      {tierOrder.map((tier) => {
        const sponsors = sponsorsByType[tier];
        if (sponsors.length === 0) return null;
        const config = tierConfig[tier];

        return (
          <section class={`tier-section tier-section--${tier}`}>
            <div class="tier-header">
              <span
                class="tier-badge"
                style={`background: ${config.gradient}; color: ${config.color}; box-shadow: ${config.glow};`}
              >
                <span class="tier-icon">{config.icon}</span>
                {config.label}
              </span>
              <span class="tier-count">
                {sponsors.length} sponsor{sponsors.length > 1 ? 's' : ''}
              </span>
            </div>

            <div class={`sponsors-grid sponsors-grid--${tier}`}>
              {sponsors.map((sponsor) => (
                <a
                  href={`/sponsor/${sponsor.id}`}
                  class={`sponsor-card sponsor-card--${tier}`}
                  style={tier === 'gold' ? `--border-color: ${config.borderColor}` : ''}
                >
                  {tier === 'gold' && <div class="card-shimmer"></div>}
                  <div class="sponsor-logo">
                    <img
                      src={`/img/sponsors/${sponsor.image}`}
                      alt={sponsor.name}
                      loading="lazy"
                    />
                  </div>
                  <div class="sponsor-info">
                    <h3 class="sponsor-name">{sponsor.name}</h3>
                    {sponsor.jobOffers && sponsor.jobOffers.length > 0 && (
                      <span class="job-badge">
                        {sponsor.jobOffers.length} offre{sponsor.jobOffers.length > 1 ? 's' : ''} d'emploi
                      </span>
                    )}
                  </div>
                </a>
              ))}
            </div>
          </section>
        );
      })}

      {allSponsors.length === 0 && (
        <div class="sponsors-empty">
          <div class="empty-icon">ðŸŽ¯</div>
          <h2>Sponsors Ã  venir</h2>
          <p>Les sponsors de l'Ã©dition 2026 seront annoncÃ©s prochainement.</p>
        </div>
      )}
    </div>

    <section class="become-sponsor">
      <div class="become-sponsor-content">
        <span class="become-label">Rejoignez-nous</span>
        <h2>Devenir sponsor</h2>
        <p>
          Vous souhaitez soutenir Touraine Tech et gagner en visibilitÃ© auprÃ¨s de la communautÃ© tech ?
        </p>
        <div class="become-sponsor-actions">
          <a href="mailto:contact@touraine.tech" class="btn btn-primary">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            Nous contacter
          </a>
          <a href="/docs/dossier-sponsoring.pdf" class="btn btn-secondary" target="_blank">
            <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            TÃ©lÃ©charger le dossier
