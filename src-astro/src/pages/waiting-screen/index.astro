---
import Layout from '@layouts/Layout.astro';
import daysData from '@data/config/days.json';

const days = daysData as number[];

const dayLabels: Record<number, string> = {
  1: 'Jeudi 12 février',
  2: 'Vendredi 13 février',
};
---

<Layout title="Waiting Screen - Sélection du jour" description="Écran d'attente pour les salles de Touraine Tech 2026">
  <div class="ws-index">
    <div class="ws-container">
      <img src="/img/logo_26_bordered.png" alt="Touraine Tech" class="logo" />
      <h1>Écran d'attente</h1>
      <p class="subtitle">Sélectionnez le jour</p>

      <div class="days-grid">
        {days.map((day) => (
          <a href={`/waiting-screen/${day}`} class="day-card">
            <span class="day-number">Jour {day}</span>
            <span class="day-label">{dayLabels[day] || `Jour ${day}`}</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>

<style>
  .ws-index {
    min-height: 100vh;
    background: #54988a;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .ws-container {
    text-align: center;
    color: white;
  }

  .logo {
    height: 80px;
    margin-bottom: 2rem;
  }

  h1 {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .days-grid {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .day-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 3rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16px;
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
  }

  .day-card:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .day-number {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .day-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 640px) {
    h1 {
      font-size: 2rem;
    }

    .days-grid {
      flex-direction: column;
    }

    .day-card {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
